@model ZarzadzanieNieruchomosciami.ViewModels.LoginViewModel 

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--section SectionTitle
{
    Zaloguj się
}-->

<div>
    @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
                    @Html.AntiForgeryToken()

                    <div id="login-error">
                        @Html.ValidationMessage("loginerror", "")
                    </div>
            

                    <table id="login-table" style="margin-left: auto; margin-right: auto;">
            
                        <tr>

                            <td>
                                @Html.LabelFor(m => m.UserName, "E-mail:" , new { @class = "col-md-2 control-label" })
                            </td>
                            <td>
                                @*<div class="col-md-10">*@
                                @Html.TextBoxFor(m => m.UserName, new { @class = "login-validation-message" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                @*</div>*@
                            </td>

                                <!--   <td>a-  Html.LabelFor(o => o.Email, "E-mail:")</td>

                    <td>
                        a  - Html.TextBoxFor(o => o.Email)
                        <div class="login-validation-message">
                a- Html.ValidationMessageFor(o => o.Email)
            </div>
        </td>
                    -->
</tr>





            <tr>
                <td>@Html.LabelFor(o => o.Password, "Hasło")</td>
                <td>
                    @Html.PasswordFor(o => o.Password)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="checkbox" style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <input type="submit" value="Zaloguj" class="submitLink" style="height: 40px;" />
                </td>
            </tr>
        </table>
    }

    <div style="text-align: center;">



        @*<a href="@Url.Action("Register")">Nie mam jeszcze konta</a>*@
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/jquery-2.2.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

