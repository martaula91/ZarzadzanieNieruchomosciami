@model ZarzadzanieNieruchomosciami.Models.Ksiegowosc
@using ZarzadzanieNieruchomosciami.Infrastructure

@{
    ViewBag.Title = "SzczegolyKsiegowosci";
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}

<br />
<table id="lokale">
    <tr class="header">
        <td>Data dodania</td>
        <td>Nazwa</td>
        <td>Opis dokumentu</td>
        <td>Wartość</td>
      

    </tr>

    <tr class="local">
        <td>@Model.DataDodania.ToString().Substring(0, 10)</td>
        <td>@Model.Nazwa</td>
        <td>@Model.OpisDokumentu</td>
        <td>@Model.Wartosc</td>
        


    </tr>

</table>

@if (User.Identity.IsAuthenticated && User.IsInRole("Employee"))
{
    <a href="@Url.Action("DodajKsiegowosc", "Manage", new { ksiegowoscId = @Model.KsiegowoscID })" style="margin-top: 20px; font-weight: bold; display: block;">
        Edytuj
    </a>
}
