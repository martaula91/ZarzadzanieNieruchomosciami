@model ZarzadzanieNieruchomosciami.ViewModels.EditDokumentViewModel

@{
    ViewBag.Title = "DodajDokument";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<hr />
<h2 class="manageHeader">Dodaj dokument</h2>
<div>
    @if (Model.Potwierdzenie.HasValue && Model.Potwierdzenie.Value)
    {
        <div style="text-align: center; margin: 50px;">
            Pomyślnie wprowadzono zmiany!
        </div>
    }
    <!--"multipart/form-data"  możliwosc przeslania pliku -->

    @using (@Html.BeginForm("DodajDokument", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken() <!--zabezpieczenie przed niepowołanym dostepem-->

        <div class="error-summary-centered">
            @Html.ValidationSummary()  <!--informacje sumaryczne walidatora-->
        </div>
        @Html.HiddenFor(o => o.Dokument.DokumentID)
        //Html.HiddenFor(o => o.Lokal.DataDodania)
        //Html.HiddenFor(o => o.Lokal.NazwaPlikuObrazka)

        <div style="text-align: center;">
            <table id="albumedit-address-table">
                <tr>
                    <td>@Html.LabelFor(o => o.Dokument.Adres, "Adres:")</td>
                    <td>@Html.TextBoxFor(o => o.Dokument.Adres)</td>
                    <td>@Html.ValidationMessageFor(o => o.Dokument.Adres)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Dokument.NazwaDokumentu, "Nazwa Dokumentu:")</td>
                    <td>@Html.TextBoxFor(o => o.Dokument.NazwaDokumentu)</td>
                    <td>@Html.ValidationMessageFor(o => o.Dokument.NazwaDokumentu)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Dokument.TypDokumentu, "TypDokumentu")</td>
                    <td>@Html.TextBoxFor(o => o.Dokument.TypDokumentu)</td>
                    <td>@Html.ValidationMessageFor(o => o.Dokument.TypDokumentu)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Dokument.AutorDokumentu, "AutorDokumentu")</td>
                    <td>@Html.TextBoxFor(o => o.Dokument.AutorDokumentu)</td>
                    <td>@Html.ValidationMessageFor(o => o.Dokument.AutorDokumentu)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Dokument.OpisDokumentu, "OpisDokumentu:")</td>
                    <td>@Html.TextBoxFor(o => o.Dokument.OpisDokumentu)</td>
                    <td>@Html.ValidationMessageFor(o => o.Dokument.OpisDokumentu)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Dokument.DataDokumentu, "DataDokumentu:")</td>
                    <td>@Html.TextBoxFor(o => o.Dokument.DataDokumentu)</td>
                    <td>@Html.ValidationMessageFor(o => o.Dokument.DataDokumentu)</td>
                </tr>


                <tr>
                    <td>@Html.LabelFor(o => o.BlokiMieszkalne, "Blok Mieszkalny:")</td>
                    <td>@Html.DropDownListFor(m => m.Dokument.BlokMieszkalnyId, new SelectList(Model.BlokiMieszkalne, "BlokMieszkalnyId", "Adres", Model.BlokiMieszkalne.First().BlokMieszkalnyId))</td>
                    <td></td>
                </tr>

                @if (ViewBag.EditMode == null || !ViewBag.EditMode)
                {
                    <tr>
                        <td>
                            <div class="upload">
                                <input type="file" name="file" />
                            </div>
                        </td>
                    </tr>
                }
                <tr>
                <tr>

                    <td style="text-align: left">
                        @if (ViewBag.EditMode)
                        {
                            if (Model.Dokument.Ukryty)
                            {
                                <a href="@Url.Action("PokazDokument", "Manage", new { BlokMieszkalnyId = Model.Dokument.DokumentID })" style="display: block; margin-top: 15px; font-weight: bold;">
                                    Przywróć
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("PokazDokument", "Manage", new { BlokMieszkalnyId = Model.Dokument.DokumentID })" style="display: block; margin-top: 15px; font-weight: bold;">
                                    Usuń
                                </a>
                            }
                        }
                    </td>


                    <td style="text-align: right;">
                        <input type="submit" value="Zapisz" class="submitLink" style="height: 40px; margin-right: 0px; margin-top: 30px; font-weight: bold;" />
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    }
</div>
